{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "declaration": false,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["esnext", "dom"],
    "jsx": "preserve",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "*": ["src/*", "src/root/*", "node_modules/*"]
    }
  }
}
